<h1>My Products</h1>

<% @products.each do |product| %>
  <div class="product-item">
    <%= image_tag(product.image, class: 'product-image') %>
    <h3><%= product.name %></h3>
    <h2><%= number_to_currency(product.price) %></h2>
    <form action="" method="POST" id="payment-form">
      <span class="payment-errors"></span>

      <div class="form-row">
        <label>
          <span>Card Holder Name</span>
          <input type="text" size="20" data-stripe="name"/>
        </label>
      </div>

      <div class="form-row">
        <label>
          <span>Billing Address Line 1</span>
          <input type="text" size="20" data-stripe="address_line1"/>
        </label>
      </div>

      <div class="form-row">
        <label>
          <span>Address Line 2</span>
          <input type="text" size="20" data-stripe="address_line2"/>
        </label>
      </div>

      <div class="form-row">
        <label>
          <span>City</span>
          <input type="text" size="20" data-stripe="address_city"/>
        </label>
      </div>

      <div class="form-row">
        <label>
          <span>Postcode</span>
          <input type="text" size="20" data-stripe="address_city"/>
        </label>
      </div>

      <div class="form-row">
        <label>
          <span>Country</span>
          <input type="text" size="20" data-stripe="address_country"/>
        </label>
      </div>

      <div class="form-row">
        <label>
          <span>Card Number</span>
          <input type="text" size="20" data-stripe="number"/>
        </label>
      </div>

      <div class="form-row">
        <label>
          <span>CVC</span>
          <input type="text" size="4" data-stripe="cvc"/>
        </label>
      </div>

      <div class="form-row">
        <label>
          <span>Expiration (MM/YYYY)</span>
          <input type="text" size="2" data-stripe="exp-month"/>
        </label>
        <span> / </span>
        <input type="text" size="4" data-stripe="exp-year"/>
      </div>

      <button type="submit">Submit Payment</button>
    </form>
  </div>
<% end %>